# Auth API
resource "azurerm_container_app" "auth_api" {
  name                         = "${var.prefix_name}-auth-api"
  container_app_environment_id = azurerm_container_app_environment.hub.id
  resource_group_name          = azurerm_resource_group.rg.name
  revision_mode                = "Single"

  template {
    container {
      name   = "auth-api"
      image  = "pipebarreto/auth-api:latest"
      cpu    = 0.25
      memory = "0.5Gi"

      env {
        name  = "JWT_SECRET"
        value = "PRFT"
      }
      env {
        name  = "AUTH_API_PORT"
        value = "8000"
      }
      env {
        name  = "USERS_API_ADDRESS"
        value = "http://${azurerm_container_app.user_api.ingress[0].fqdn}:8083"
      }
    }
  }
  ingress {
    external_enabled = true
    target_port      = 8000

    traffic_weight {
      revision_suffix = "latest"
      percentage = 100
    }
  }
}



# Frontend
resource "azurerm_container_app" "frontend" {
  name                         = "${var.prefix_name}-frontend"
  container_app_environment_id = azurerm_container_app_environment.hub.id
  resource_group_name          = azurerm_resource_group.rg.name
  revision_mode                = "Single"

  template {
    container {
      name   = "frontend"
      image  = "pipebarreto/frontend:latest"
      cpu    = 0.25
      memory = "0.5Gi"

      env {
        name  = "PORT"
        value = "8080"
      }
      env {
        name  = "AUTH_API_ADDRESS"
        value = "http://${azurerm_container_app.auth_api.ingress[0].fqdn}:8000"
      }
      env {
        name  = "TODOS_API_ADDRESS"
        value = "http://${azurerm_container_app.todos_api.ingress[0].fqdn}:8082"
      }
    }
  }

  ingress {
    external_enabled = true
    target_port      = 8080

    traffic_weight {
      revision_suffix = "latest"
      percentage = 100
    }
  }
}
