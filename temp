resource "azurerm_resource_group" "rg" {
  name     = "${var.prefix_name}-rg"
  location = var.region
}

resource "azurerm_container_app_environment" "hub" {
  name                = "${var.prefix_name}-env"
  location            = var.region
  resource_group_name = azurerm_resource_group.rg.name
}

# Redis
resource "azurerm_container_app" "redis" {
  name                         = "${var.prefix_name}-redis"
  container_app_environment_id = azurerm_container_app_environment.hub.id
  resource_group_name          = azurerm_resource_group.rg.name
  revision_mode                = "Single"

  template {
    container {
      name   = "redis"
      image  = "redis:7.0"
      cpu    = 0.25
      memory = "0.5Gi"

      env {
        name  = "REDIS_PORT"
        value = "6379"
      }
    }
  }
  ingress {
    external_enabled = true
    target_port      = 6379

    traffic_weight {
      revision_suffix = "latest"
      percentage = 100
    }
  }
}

# Log Processor
resource "azurerm_container_app" "log_processor" {
  name                         = "${var.prefix_name}-log-processor"
  container_app_environment_id = azurerm_container_app_environment.hub.id
  resource_group_name          = azurerm_resource_group.rg.name
  revision_mode                = "Single"

  template {
    container {
      name   = "log-processor"
      image  = "pipebarreto/log-message-processor:latest"
      cpu    = 0.25
      memory = "0.5Gi"

      env {
        name  = "REDIS_HOST"
        value = "${azurerm_container_app.redis.ingress[0].fqdn}"
      }
      env {
        name  = "REDIS_PORT"
        value = "6379"
      }
      env {
        name  = "REDIS_CHANNEL"
        value = "log_channel"
      }
    }
  }
}

# Todos API
resource "azurerm_container_app" "todos_api" {
  name                         = "${var.prefix_name}-todos-api"
  container_app_environment_id = azurerm_container_app_environment.hub.id
  resource_group_name          = azurerm_resource_group.rg.name
  revision_mode                = "Single"

  template {
    container {
      name   = "todos-api"
      image  = "pipebarreto/todos-api:latest"
      cpu    = 0.25
      memory = "0.5Gi"

      env {
        name  = "JWT_SECRET"
        value = "PRFT"
      }
      env {
        name  = "TODOS_API_PORT"
        value = "8082"
      }
      env {
        name  = "REDIS_HOST"
        value = "${azurerm_container_app.redis.ingress[0].fqdn}"
      }
      env {
        name  = "REDIS_PORT"
        value = "6379"
      }
      env {
        name  = "REDIS_CHANNEL"
        value = "todos_api"
      }
    }
  }
  ingress {
    external_enabled = true
    target_port      = 8082

    traffic_weight {
      revision_suffix = "latest"
      percentage = 100
    }
  }
}

