FROM golang:1.18.2

WORKDIR /app 

COPY . .

RUN export GO111MODULE=on
RUN go mod init github.com/bortizf/microservice-app-example/tree/master/auth-api
RUN go mod tidy
RUN go build -o auth-api

ENV JWT_SECRET=PRFT
ENV AUTH_API_PORT=8000
ENV USER_API_ADDRESS=http://127.0.0.1:8083

VOLUME ["/app"]

CMD ["./auth-api"]
